<h1>All users</h1>

<table class="users" cellspacing=0 cellpadding = 0>
  <tr>
    <th>
    </th>
    <th>
      ID
    </th>
    <th>
      Name
    </th>
    <th>
      Email
    </th>
    <th>
      RSVP
    </th>
    <th>
      Clicked
    </th>
  </tr>
  <% @users.each_with_index do |user, index| %>
    <tr>
      <td>
        <%= index+1%>
      </td>
      <td>
        <%= user.id %>
      </td>
      <td>
        <%= user.full_name %>
      </td>
      <td>
        <%= user.email %>
      </td>
      <td>
        <%= user.rsvp %>
      </td>
      <td>
        <%= user.clicked_invite %>
      </td>
    </tr>
  <% end %>
  <tr>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
    <td><%= @users.where(:rsvp => true).count %></td>
  </tr>
</table>